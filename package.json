{
  "name": "plain-frontend",
  "version": "1.0.0",
  "description": "Plain 정보/커뮤니티 사이트 프런트엔드",
  "scripts": {
    "dev": "webpack-dev-server",
    "build": "webpack --mode=production",
    "build:gh-pages": "npm run sitemap && webpack --mode=production --output-public-path=/plaintest/",
    "lint": "eslint app/javascript --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "sitemap": "node scripts/generate-sitemap.js",
    "sitemap:dev": "node scripts/generate-sitemap.js && echo 'Sitemap generated for development'"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "2.8.2",
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.5",
    "@supabase/supabase-js": "^2.57.2",
    "dayjs": "^1.11.7",
    "framer-motion": "11.0.3",
    "lucide-react": "^0.542.0",
    "quill": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^8.0.5",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "@babel/preset-typescript": "^7.18.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "babel-loader": "^9.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^4.0.0",
    "typescript": "^4.9.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.0"
  }
}
